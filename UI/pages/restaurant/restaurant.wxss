/* pages/restaurant/restaurant.wxss */
.page {
  display:flex;
}

.user--info--nickname {
  color: #09090a;
}

.resturant-list {
  position: fixed;
  top: 20%;
  width: 100%;
  height: 80%;
}

.restaurant {
  display: flex;
  margin-left: 5px;
  margin-top: 5px;
  border-width: thin;
  border-style: solid;
  font-size: 24px;
}

.restaurant--header {
  display: flex;
  margin-left: 5px;
  margin-top: 5px;
  border-width: thin;
  border-style: solid;
  font-size: 24px;
}


.restaurant--header--name {
  width: 30%;
  font-size: 18px;
  margin-left: 5%;
}
.restaurant--header--type {
  width: 30%;
  font-size: 18px;
  margin-left: 5%;
}

.restaurant--header--rating {
  width: 30%;
  font-size: 20px;
}

.restaurant--name {
  margin-left: 2px;
  width: 30%;
  font-size: 16px;
  color: #5E6062;
  font-weight: lighter;
}

.restaurant--type {
  padding-top: 6px;
  width: 30%;
  font-size: 20px;
  text-align: center;
  align-content: center;
}

.restaurant--rating {
  padding: 3px 3px 3px 3px;
  height: 90%;
  width: 30%;
  font-size: 16px;
  text-align: center;
  align-content: center;
}
